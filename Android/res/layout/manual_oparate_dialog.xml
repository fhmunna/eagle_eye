<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/sensor_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor E/D"/>

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBar"
        android:layout_marginTop="10dp"
        android:progress="50"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBar2"
        android:layout_marginTop="10dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBar3"
        android:layout_marginTop="10dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBar4"
        android:layout_marginTop="10dp"
        />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBarRadio5"
        android:layout_marginTop="10dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBarRadio6"
        android:layout_marginTop="5dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBarRadio7"
        android:layout_marginTop="5dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBarRadio8"
        android:layout_marginTop="5dp"
        />



</LinearLayout>